<?xml version="1.0" encoding="utf-8"?>
<LinearLayout n1:orientation="vertical"
    n1:id="@+id/font_fragment_layout"
    n1:background="@color/bg"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">

    <LinearLayout
        n1:orientation="horizontal"
        n1:background="@color/primary_dark"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content">

        <Button
            n1:textColor="#ffffffff"
            n1:gravity="center"
            n1:id="@+id/button_text_color"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:text="@string/canvas_text_color"
            n1:layout_weight="1.0"
            style="@style/canvas_text_toolbar_button_style" />

        <Button
            n1:textColor="#ffffffff"
            n1:gravity="center"
            n1:id="@+id/button_font_ok"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:text="@android:string/ok"
            n1:layout_weight="1.0"
            style="@style/canvas_text_toolbar_button_style" />
    </LinearLayout>

    <TextView
        n1:textSize="@dimen/preview_text_size"
        n1:textColor="#ffffffff"
        n1:gravity="center"
        n1:id="@+id/textview_font"
        n1:background="#ff333333"
        n1:padding="5.0dip"
        n1:clickable="true"
        n1:layout_width="fill_parent"
        n1:layout_height="@dimen/preview_text_view_height"
        n1:text="@string/preview_text"
        n1:lines="1" />

    <EditText
        n1:textColor="#ffffffff"
        n1:gravity="center"
        n1:id="@+id/edittext_font"
        n1:padding="@dimen/edittext_padding"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:hint="@string/canvas_text_hint"
        n1:ems="1"
        n1:singleLine="true"
        n1:inputType="textNoSuggestions"
        n1:imeOptions="actionDone" />

    <GridView
        n1:id="@+id/gridview_font"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/_5sdp"
        n1:cacheColorHint="#00000000"
        n1:numColumns="4" />
</LinearLayout>