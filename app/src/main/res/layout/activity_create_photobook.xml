<?xml version="1.0" encoding="utf-8"?>
<LinearLayout n1:orientation="vertical"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="@color/white"
    xmlns:n1="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        n1:id="@+id/header"
        n1:layout_width="fill_parent"
        n1:layout_height="56dp"
        n1:background="@color/header_color"
        n1:orientation="horizontal"
        n1:gravity="center">


        <TextView
            n1:id="@+id/textView_header"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_gravity="center"
            n1:clickable="true"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            n1:gravity="center"
            n1:text="Create PhotoBook"
            n1:textColor="#ffffffff"
            n1:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        n1:layout_width="match_parent"
        n1:layout_height="match_parent"
        n1:orientation="vertical"
        n1:padding="20dp">

        <TextView
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:text="Format"/>

        <!--    <org.angmarch.views.NiceSpinner-->
        <!--        n1:id="@+id/spinner_format"-->
        <!--        n1:layout_width="match_parent"-->
        <!--        n1:layout_height="wrap_content"-->
        <!--        n1:layout_marginBottom="20dp"/>-->
        <com.tiper.MaterialSpinner
            n1:id="@+id/spinner_format"
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:layout_marginBottom="20dp"/>

        <TextView
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:text="Book binding"/>

        <!--    <org.angmarch.views.NiceSpinner-->
        <!--        n1:id="@+id/spinner_binding"-->
        <!--        n1:layout_width="match_parent"-->
        <!--        n1:layout_height="wrap_content"-->
        <!--        n1:layout_marginBottom="20dp"/>-->
        <com.tiper.MaterialSpinner
            n1:id="@+id/spinner_binding"
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:layout_marginBottom="20dp"/>

        <TextView
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:text="Number of pages"/>

        <!--    <org.angmarch.views.NiceSpinner-->
        <!--        n1:id="@+id/spinner_pages"-->
        <!--        n1:layout_width="match_parent"-->
        <!--        n1:layout_height="wrap_content"-->
        <!--        n1:layout_marginBottom="20dp"/>-->
        <com.tiper.MaterialSpinner
            n1:id="@+id/spinner_pages"
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:layout_marginBottom="20dp"/>

        <View
            n1:layout_width="match_parent"
            n1:layout_height="1dp"
            n1:background="#ECECEC"
            n1:layout_marginBottom="20dp"/>

        <LinearLayout
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:orientation="horizontal"
            n1:layout_marginHorizontal="20dp">

            <TextView
                n1:layout_width="0dp"
                n1:layout_height="wrap_content"
                n1:layout_weight="1"
                n1:gravity="right"
                n1:text="Price : "/>

            <TextView
                n1:id="@+id/txt_price"
                n1:layout_width="0dp"
                n1:layout_height="wrap_content"
                n1:layout_weight="1"
                n1:gravity="right"
                n1:text="$ 100"/>
        </LinearLayout>


        <Button
            n1:id="@+id/btn_create"
            n1:layout_width="match_parent"
            n1:layout_height="wrap_content"
            n1:layout_marginHorizontal="20dp"
            n1:layout_marginTop="50dp"
            n1:text="Create PhotoBook"
            n1:background="@drawable/create_button_background"/>

    </LinearLayout>

</LinearLayout>


